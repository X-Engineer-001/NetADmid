// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  poster User @relation(fields: [posterID], references: [id])
  posterID Int
  text String
}